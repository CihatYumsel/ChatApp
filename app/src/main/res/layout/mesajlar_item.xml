<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:contentPadding="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:id="@+id/mesajlar_item_imgKullaniciProfil"
            app:civ_border_width="3dp"
            app:civ_border_color="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/mesajlar_item_imgKullaniciProfil"
            android:layout_toLeftOf="@id/mesajlar_item_imgSagYon"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/mesajlar_item_txtKullaniciIsim"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/mesajlar_item_imgKullaniciProfil"
            android:layout_toLeftOf="@id/mesajlar_item_imgSagYon"
            android:layout_below="@id/mesajlar_item_txtKullaniciIsim"
            android:textSize="14sp"
            android:textStyle="italic"
            android:id="@+id/mesajlar_item_txtSonMesaj"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/mesajlar_item_imgSagYon"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_sag_yon" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
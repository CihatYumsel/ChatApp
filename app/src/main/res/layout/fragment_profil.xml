<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Fragment.ProfilFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hesabım"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:textSize="21sp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="156dp"
            android:layout_height="156dp"
            android:id="@+id/profil_fragment_imgUserProfil"
            app:civ_border_width="3dp"
            app:civ_border_color="#000000"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_camera"
            android:layout_alignRight="@id/profil_fragment_imgUserProfil"
            android:layout_alignBottom="@id/profil_fragment_imgUserProfil"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:id="@+id/profil_fragment_imgYeniResim"/>

    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/profil_edit_bg"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#000000"
        android:enabled="false"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="25dp"
        android:id="@+id/profil_fragment_editIsim"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/profil_edit_bg"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#000000"
        android:enabled="false"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="25dp"
        android:id="@+id/profil_fragment_editEmail"/>

    <RelativeLayout
        android:layout_width="100dp"
        android:id="@+id/profil_fragment_relaCikis"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="200dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/profil_cikis_bg"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="17sp"
            android:text="Çıkış Yap"/>

    </RelativeLayout>




</LinearLayout>
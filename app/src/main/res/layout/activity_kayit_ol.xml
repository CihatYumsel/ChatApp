<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:gravity="center"
    android:id="@+id/kayitOl_linear"
    tools:context=".View.KayitOlActivity"
    android:orientation="vertical">
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kayıt Ol"
        android:textSize="27sp"
        android:textStyle="bold"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:counterEnabled="true"
        app:counterMaxLength="20"
        app:counterTextColor="@color/black"
        app:boxCornerRadiusTopStart="10dp"
        app:boxCornerRadiusBottomEnd="10dp"
        android:id="@+id/kayitOl_inputIsim"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="İsminizi Giriniz"
            android:id="@+id/kayitOl_editIsim"
            android:textSize="17sp"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:maxLength="20"
            android:textStyle="bold">
        </EditText>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:counterEnabled="true"
        app:counterMaxLength="35"
        app:counterTextColor="@color/black"
        app:boxCornerRadiusTopStart="10dp"
        app:boxCornerRadiusBottomEnd="10dp"
        android:id="@+id/kayitOl_inputEmail"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="E-mailinizi Giriniz"
            android:id="@+id/kayitOl_editEmail"
            android:textSize="17sp"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:maxLength="35"
            android:textStyle="bold">
        </EditText>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterEnabled="true"
        app:counterMaxLength="20"
        app:counterTextColor="@color/black"
        android:layout_marginTop="15dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxCornerRadiusBottomEnd="10dp"
        android:id="@+id/kayitOl_inputSifre"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Şifrenizi Giriniz"
            android:id="@+id/kayitOl_editSifre"
            android:inputType="textPassword"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:maxLength="20"
            android:textStyle="bold">
        </EditText>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterEnabled="true"
        app:counterMaxLength="20"
        app:counterTextColor="@color/black"
        android:layout_marginTop="15dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxCornerRadiusBottomEnd="10dp"
        android:id="@+id/kayitOl_inputSifreTekrar"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Şifrenizi Onaylayınız"
            android:id="@+id/kayitOl_editSifreTekrar"
            android:inputType="textPassword"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:maxLength="20"
            android:textStyle="bold">
        </EditText>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:text="Kayıt Ol"
        android:onClick="btnKayitOl"
        android:background="@drawable/kayitol_girisyap_btn_bg"
        android:textSize="19sp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"/>

  </LinearLayout>
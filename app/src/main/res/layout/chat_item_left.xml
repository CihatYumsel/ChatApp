<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:padding="3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginLeft="3dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#0A7A70"
        android:id="@+id/chat_item_imgProfil"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:id="@+id/chat_item_txtMesaj"
        android:background="@drawable/chat_item_bg_left"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="3dp"
        android:layout_alignTop="@id/chat_item_imgProfil"
        android:layout_toRightOf="@id/chat_item_imgProfil"
        android:padding="8dp"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="3dp"
        android:layout_alignTop="@id/chat_item_imgProfil"
        android:layout_toRightOf="@id/chat_item_imgProfil"
        android:layout_marginTop="2dp"
        android:padding="8dp"
        android:background="@drawable/chat_item_bg_left"
        android:id="@+id/chat_item_imgResim"
        android:onClick="btnResimAc"/>

    <ProgressBar
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignLeft="@id/chat_item_imgResim"
        android:layout_alignRight="@id/chat_item_imgResim"
        android:layout_centerVertical="true"
        android:indeterminate="true"
        android:indeterminateTint="@color/black"
        android:id="@+id/chat_item_progress"/>

</RelativeLayout>